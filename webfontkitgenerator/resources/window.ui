<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <menu id="app-menu">
    <section>
      <attribute name="id">importers-section</attribute>
      <item>
        <attribute name="label" translatable="yes">Import from Google Fonts</attribute>
        <attribute name="action">win.google</attribute>
      </item>
    </section>
    <section>
      <attribute name="id">help-section</attribute>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About Webfont Kit Generator</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
  <template class="Window" parent="AdwApplicationWindow">
    <property name="default_width">700</property>
    <property name="default_height">500</property>
    <property name="content">
      <object class="GtkStack" id="appstack">
        <property name="transition_type">crossfade</property>
        <signal name="notify::visible-child-name" handler="_on_appstack_changes" swapped="no"/>
        <child>
          <object class="GtkStackPage">
            <property name="name">main</property>
            <property name="child">
              <object class="AdwToastOverlay" id="toasts">
                <property name="vexpand">True</property>
                <child>
                  <object class="AdwToolbarView">
                    <property name="bottom-bar-style">raised</property>
                    <child type="top">
                      <object class="GtkHeaderBar" id="headerbar">
                          <property name="title-widget">
                            <object class="AdwViewSwitcher">
                              <property name="stack">viewstack</property>
                              <property name="policy">wide</property>
                            </object>
                          </property>
                          <child>
                            <object class="GtkButton" id="btn_add_fonts">
                              <property name="tooltip-text" translatable="yes">Open Fonts</property>
                              <property name="action_name">win.open</property>
                              <property name="icon_name">list-add-symbolic</property>
                            </object>
                          </child>
                          <child type="end">
                            <object class="GtkMenuButton">
                              <property name="tooltip-text" translatable="yes">Main Menu</property>
                              <property name="menu-model">app-menu</property>
                              <property name="focus-on-click">False</property>
                              <property name="direction">none</property>
                            </object>
                          </child>
                        </object>
                    </child>
                    <property name="content">
                      <object class="AdwViewStack" id="viewstack">
                          <property name="vexpand">True</property>
                          <child>
                            <object class="AdwViewStackPage">
                              <property name="name">main</property>
                              <property name="title" translatable="yes">Fonts</property>
                              <property name="icon-name">font-x-generic-symbolic</property>
                              <property name="child">
                                <object class="GtkBox">
                                  <child>
                                    <object class="GtkStack" id="fonts_stack">
                                      <property name="transition_type">crossfade</property>
                                      <property name="hexpand">True</property>
                                      <child>
                                        <object class="GtkStackPage">
                                          <property name="name">empty</property>
                                          <property name="child">
                                            <object class="GtkBox">
                                              <property name="valign">center</property>
                                              <property name="orientation">vertical</property>
                                              <property name="spacing">48</property>
                                              <child>
                                                <object class="GtkLabel">
                                                  <property name="label" translatable="yes">Add some fonts</property>
                                                  <style>
                                                    <class name="title-1"/>
                                                  </style>
                                                </object>
                                              </child>
                                              <child>
                                                <object class="GtkBox">
                                                  <property name="halign">center</property>
                                                  <child>
                                                    <object class="GtkImage">
                                                      <property name="icon_name">splash-a-symbolic</property>
                                                      <property name="pixel_size">192</property>
                                                    </object>
                                                  </child>
                                                  <child>
                                                    <object class="GtkImage">
                                                      <property name="icon_name">splash-b-symbolic</property>
                                                      <property name="pixel_size">192</property>
                                                    </object>
                                                  </child>
                                                </object>
                                              </child>
                                              <child>
                                                <object class="GtkButton">
                                                  <property name="label" translatable="yes">Open Fonts</property>
                                                  <property name="halign">center</property>
                                                  <property name="action_name">win.open</property>
                                                  <style>
                                                    <class name="suggested-action"/>
                                                    <class name="pill"/>
                                                  </style>
                                                </object>
                                              </child>
                                            </object>
                                          </property>
                                        </object>
                                      </child>
                                      <child>
                                        <object class="GtkStackPage">
                                          <property name="name">fonts</property>
                                          <property name="child">
                                            <object class="GtkBox">
                                              <property name="orientation">vertical</property>
                                              <child>
                                                <object class="GtkScrolledWindow">
                                                  <property name="vexpand">True</property>
                                                  <child>
                                                    <object class="GtkViewport">
                                                      <child>
                                                        <object class="AdwClamp">
                                                          <property name="margin_start">24</property>
                                                          <property name="margin_end">24</property>
                                                          <child>
                                                            <object class="GtkBox">
                                                              <property name="orientation">vertical</property>
                                                              <property name="margin_top">48</property>
                                                              <property name="margin_bottom">48</property>
                                                              <child>
                                                                <object class="GtkBox">
                                                                  <property name="orientation">vertical</property>
                                                                  <child>
                                                                    <object class="GtkListBox" id="fonts_list">
                                                                      <property name="selection-mode">none</property>
                                                                      <style>
                                                                        <class name="content"/>
                                                                      </style>
                                                                    </object>
                                                                  </child>
                                                                </object>
                                                              </child>
                                                            </object>
                                                          </child>
                                                        </object>
                                                      </child>
                                                    </object>
                                                  </child>
                                                </object>
                                              </child>
                                            </object>
                                          </property>
                                        </object>
                                      </child>
                                    </object>
                                  </child>
                                </object>
                              </property>
                            </object>
                          </child>
                          <child>
                            <object class="AdwViewStackPage">
                              <property name="name">options</property>
                              <property name="title" translatable="yes">Options</property>
                              <property name="icon-name">emblem-system-symbolic</property>
                              <property name="child">
                                <object class="Options" id="options"/>
                              </property>
                            </object>
                          </child>
                        </object>
                    </property>
                    <child type="bottom">
                      <object class="GtkRevealer" id="path_revealer">
                          <property name="transition-type">slide-up</property>
                          <property name="child">
                            <object class="GtkBox">
                              <property name="orientation">vertical</property>
                              <child>
                                <object class="GtkBox">
                                  <property name="spacing">12</property>
                                  <style>
                                    <class name="bottom-box"/>
                                  </style>
                                  <child>
                                    <object class="GtkBox">
                                      <property name="spacing">12</property>
                                      <property name="valign">center</property>
                                      <property name="hexpand">True</property>
                                      <child>
                                        <object class="GtkBox">
                                          <property name="spacing">6</property>
                                          <child>
                                            <object class="GtkImage">
                                              <property name="icon-name">folder-open-symbolic</property>
                                            </object>
                                          </child>
                                          <child>
                                            <object class="GtkLabel" id="directory">
                                              <property name="label" translatable="yes">Select Output Directory</property>
                                              <property name="valign">center</property>
                                              <property name="ellipsize">end</property>
                                              <style>
                                                <class name="heading"/>
                                              </style>
                                            </object>
                                          </child>
                                        </object>
                                      </child>
                                      <child>
                                        <object class="GtkButton">
                                          <property name="label" translatable="yes">Browse...</property>
                                          <property name="action_name">win.set-dir</property>
                                        </object>
                                      </child>
                                    </object>
                                  </child>
                                  <child>
                                    <object class="GtkButton">
                                      <property name="label" translatable="yes">Generate</property>
                                      <property name="action_name">win.generate</property>
                                      <style>
                                        <class name="suggested-action"/>
                                      </style>
                                    </object>
                                  </child>
                                </object>
                              </child>
                            </object>
                          </property>
                        </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">progress</property>
            <property name="child">
              <object class="GtkWindowHandle">
                <child>
                  <object class="AdwStatusPage" id="progress">
                    <child>
                      <object class="AdwClamp">
                        <child>
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="spacing">36</property>
                            <child>
                              <object class="GtkProgressBar" id="progressbar">
                                <property name="show-text">True</property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkButton" id="cancel">
                                <property name="label" translatable="yes">Cancel</property>
                                <property name="halign">center</property>
                                <style>
                                  <class name="pill"/>
                                </style>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">finished</property>
            <property name="child">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkHeaderBar">
                    <property name="title-widget">
                      <object class="AdwViewSwitcher">
                        <property name="stack">finished_stack</property>
                        <property name="policy">wide</property>
                      </object>
                    </property>
                    <child>
                      <object class="GtkButton" id="btn_back">
                        <property name="action_name">win.back</property>
                        <property name="icon_name">go-previous-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Back</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwViewStack" id="finished_stack">
                    <child>
                      <object class="AdwViewStackPage">
                        <property name="name">info</property>
                        <property name="icon-name">emblem-default-symbolic</property>
                        <property name="title" translatable="yes">Information</property>
                        <property name="child">
                          <object class="GtkScrolledWindow">
                            <property name="vexpand">True</property>
                            <child>
                              <object class="GtkViewport">
                                <child>
                                  <object class="AdwStatusPage">
                                    <property name="title" translatable="yes">Generation finished!</property>
                                    <property name="icon-name">emblem-default-symbolic</property>
                                    <child>
                                      <object class="AdwClamp">
                                        <child>
                                          <object class="GtkBox">
                                            <property name="orientation">vertical</property>
                                            <property name="spacing">12</property>
                                            <property name="valign">center</property>
                                            <child>
                                              <object class="GtkLabel">
                                                <property name="label" translatable="yes">To link your fonts, copy the code below into the head of your HTML:</property>
                                                <property name="halign">start</property>
                                              </object>
                                            </child>
                                            <child>
                                              <object class="SourceView" id="src_html">
                                                <property name="language">html</property>
                                              </object>
                                            </child>
                                            <child>
                                              <object class="GtkLabel">
                                                <property name="label" translatable="yes">Or import it directly to your CSS:</property>
                                                <property name="halign">start</property>
                                              </object>
                                            </child>
                                            <child>
                                              <object class="SourceView" id="src_css">
                                                <property name="language">css</property>
                                              </object>
                                            </child>
                                            <child>
                                              <object class="GtkButton">
                                                <property name="label" translatable="yes">Open in Files</property>
                                                <property name="halign">center</property>
                                                <property name="margin_top">20</property>
                                                <signal name="clicked" handler="_open_generation_dir" swapped="no"/>
                                                <style>
                                                  <class name="pill"/>
                                                </style>
                                              </object>
                                            </child>
                                          </object>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwViewStackPage">
                        <property name="name">log</property>
                        <property name="icon-name">view-list-bullet-symbolic</property>
                        <property name="title" translatable="yes">Logs</property>
                        <property name="child">
                          <object class="GtkBox">
                            <property name="orientation">vertical</property>
                            <property name="spacing">6</property>
                            <child>
                              <object class="GtkScrolledWindow">
                                <property name="vexpand">True</property>
                                <child>
                                  <object class="GtkViewport">
                                    <child>
                                      <object class="AdwClamp">
                                        <property name="margin_top">20</property>
                                        <child>
                                          <object class="Log" id="log"/>
                                        </child>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
