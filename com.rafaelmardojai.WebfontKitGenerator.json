{
    "app-id" : "com.rafaelmardojai.WebfontKitGenerator",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.36",
    "sdk" : "org.gnome.Sdk",
    "command" : "webfontkitgenerator",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	"FontTools.json",
    	{
            "name" : "libhandy",
            "buildsystem" : "meson",
            "config-opts": [
                "-Dgtk_doc=false",
                "-Dtests=false",
                "-Dexamples=false",
                "-Dvapi=false",
                "-Dglade_catalog=disabled"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://source.puri.sm/Librem5/libhandy.git",
                    "tag" : "v0.80.0",
                    "commit": "b61eefde06040703026f49a0b979588e69f77d3a"
                }
            ]
        },
        {
            "name" : "webfontkitgenerator",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "."
                }
            ]
        }
    ]
}
